generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id           String   @id @default(cuid())
  leadId       String   @unique
  createdAt    DateTime @default(now())

  fullName     String
  email        String
  phoneDigits  String
  service      String
  details      String?

  // Tracking
  pagePath     String?
  referrer     String?
  utmSource    String?
  utmMedium    String?
  utmCampaign  String?
  utmTerm      String?
  utmContent   String?
  gclid        String?
  fbclid       String?

  // Request metadata
  ip           String?
  userAgent    String?
  country      String?
  region       String?
  city         String?
  postal       String?

  // Raw JSON snapshot
  raw          String?
}
