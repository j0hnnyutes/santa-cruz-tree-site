// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum LeadStatus {
  NEW
  CONTACTED
  CLOSED
  ARCHIVED
}

model Lead {
  leadId       String     @id
  createdAt    DateTime   @default(now())
  fullName     String
  phoneDigits  String
  email        String
  service      String
  details      String?
  status       LeadStatus @default(NEW)
  contactedAt  DateTime?
  adminNotes   String?

  // âœ… NEW: archive support
  archivedAt   DateTime?
}